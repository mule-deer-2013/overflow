<h1>This is the show page</h1>

<p>Title: <%= @question.title %></p>

<p>Question: <%= @question.content %></p>
<br>

<h3> Responses: </h3>
<div id="responses">
<% if @responses.length > 0 %>
    <% @responses.each do |response| %>
      <%=  response.content  %>
      <br>
    <% end %>
  <% else %>
    <p>No responses</p>
<% end %>
</div>

<%= button_to 'Answer Question', new_question_response_path(@question), form_class: 'show_response_form', method: :get, remote: true %>
